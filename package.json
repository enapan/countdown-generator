{
  "private": true,
  "scripts": {
    "postinstall": "bower install",
    "build": "pulp build --to dist/app.js",
    "b": "pulp browserify --to dist/app.js",
    "browserify": "pulp browserify --optimise --transform uglifyify --main Frontend --to dist/app.js",
    "watch": "pulp -w build --to dist/app.js",
    "watch-fast": "webpack --entry ./entry.js --output-filename dist/app.js --progress --watch",
    "webpack": "webpack --entry ./entry.js --output-filename dist/app.js -p --progress"
  },
  "devDependencies": {
    "pulp": "^11.0.0",
    "purescript": "^0.11.0",
    "purescript-psa": "^0.5.0",
    "webpack": "^3.6.0"
  }
}
